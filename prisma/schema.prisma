datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int        @id @default(autoincrement())
  email         String     @unique
  name          String
  password_hash String
  created_at    DateTime   @default(now())

  documents           Document[] @relation("UserDocuments")
  lastEditedDocuments Document[] @relation("UserLastEditedDocuments")
  
  @@map("users")
}

model Document {
  id            Int        @id @default(autoincrement())
  title         String     @default("Untitled Document")
  owner_id      Int
  last_edited_by_id Int?

  yjs_state_blob Bytes?    
  
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  owner         User     @relation("UserDocuments", fields: [owner_id], references: [id])
  last_edited_by User?   @relation("UserLastEditedDocuments", fields: [last_edited_by_id], references: [id])
  collaborators Collaborator[]

  @@map("documents")
}

model Collaborator {
  id          Int      @id @default(autoincrement())
  document_id Int
  document    Document @relation(fields: [document_id], references: [id])
  email       String
  permission  String   // "read" or "write"
  created_at  DateTime @default(now())

  @@unique([document_id, email])
  @@map("collaborators")
}
